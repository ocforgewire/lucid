    "jose": "^6.0.0",
    "postgres": "^3.4.0",
    "stripe": "^17.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.30.0",
    "typescript": "^5.7.0"
  }
